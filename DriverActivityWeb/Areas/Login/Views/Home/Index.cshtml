@{
    ViewData["Title"] = "Login";
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Driver Activity</title>
    <link href="https://fonts.googleapis.com/css2?family=Jost:wght@500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/toastr/build/toastr.css" />
    <link rel="stylesheet" type="text/css" href="~/css/loginStyle.css">
</head>
<body class="login-screen">
    <div class="main">
        <input type="checkbox" id="chk" aria-hidden="true">

        <div class="signup">
            <form id="registerForm">
                <label for="chk" aria-hidden="true">Sign up</label>
                <input type="text" name="username" placeholder="User name" placeholder="Enter User Name">
                <input type="text" name="name" placeholder="Full Name" placeholder="Enter Full Name">
                <input type="text" name="staffId" placeholder="Staff ID" placeholder="Enter Staff ID">
                <input type="password" name="password" placeholder="Password" placeholder="Enter Password">
                <button type="submit" id="btnRegister" class="two-tone-button login-button">Sign up</button>
            </form>
        </div>

        <div class="login">
            <form id="loginForm">
                <label for="chk" aria-hidden="true">Login</label>
                <input type="text" name="username" id="username" placeholder="Enter User Name">
                <input type="password" name="password" id="password" placeholder="Enter Password">
                <button type="submit" id="btnLogin" class="login-button two-tone-button">Login</button>
            </form>
        </div>
    </div>
</body>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/toastr/build/toastr.min.js"></script>
<script src="~/lib/crypto-js/crypto-js.js"></script>

<script src="~/js/utilities/jq-client-util.js"></script>
<script src="~/js/utilities/jq-messag-util.js"></script>
<script src="~/js/utilities/jq-helper-util.js"></script>
<script src="~/js/utilities/jq-form-util.js"></script>
<script src="~/js/utilities/jq-store-util.js"></script>

<script type="text/javascript">

    const loginUtil = (function () {
        'use strict';

        window.addEventListener('DOMContentLoaded', function () {
            const btnLoginId = 'btnLogin',
            btnRegisterId = 'btnRegister',
            usernameId ='username',
            passwordId ='password',
            registerFormId ='registerForm'

                ;

             document.getElementById(btnLoginId).addEventListener("click", evt=>{
                 evt.preventDefault();
                 jqClient.Login({
                     username: $(`#${usernameId}`).val(), 
                     password:$(`#${passwordId}`).val(),
                 });
             });

             document.getElementById(btnRegisterId).addEventListener("click", evt=>{
                 evt.preventDefault();

                const formValues = formUtilities.getFormControlValue(registerFormId);
                const formElem = formUtilities.getFormElem(registerFormId);
                 jqClient.Register({
                     username: $(`#${usernameId}`).val(), 
                     password:$(`#${passwordId}`).val(),

                 });
             });

        });

        
     })();
</script>
</html>